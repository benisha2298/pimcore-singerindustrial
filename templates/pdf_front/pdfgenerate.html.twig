<script>
    $(document).ready(function () {
        function getFormData() {
            var form = $('#upload-form')[0]; // Get the form element
            var formData = new FormData(form); // Create a FormData object
            return formData;
        }

        $('#preview-button').on('click', function () {
            var formData = getFormData();

            // Example: Send formData to preview endpoint
            $.ajax({
                url: 'http://pimcore.altiussolution.com/api/pdf-template-controller', // Replace with your preview endpoint
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    $('#preview-div').html(response);
                    $('#preview-div').show();
                    $('#preview-hide').show();
                    $('#preview-button').hide();
                },
                error: function (xhr, status, error) {
                    alert('Failed to preview. Please try again.');
                    console.error(error); // Debug error
                }
            });
        });
        $('#preview-hide').on('click', function () {
            $('#preview-div').hide();
            $('#preview-hide').hide();
            $('#preview-button').show();
        });
    $('#upload-form').submit(function (e) {
        e.preventDefault(); // Prevent the default form submission

        // Create a FormData object to send the file via AJAX
        var formData = new FormData(this);
        $.ajax({
            url: 'http://pimcore.altiussolution.com/api/pdf-export',
            type: 'POST',
            data: formData,
            processData: false, // Prevent jQuery from processing the FormData
            contentType: false, // Prevent jQuery from setting the content type
            xhrFields: {
                responseType: 'blob' // Set the response type to 'blob'
            },
            success: function (response, status, xhr) {
                try {
                    // Get the 'Content-Disposition' header
                    var disposition = xhr.getResponseHeader('Content-Disposition');
                    var fileName = 'download.zip'; // Default filename

                    if (disposition && disposition.includes('filename=')) {
                        // Extract the filename from the header
                        var matches = disposition.match(/filename="(.+)"/);
                        if (matches && matches[1]) {
                            fileName = matches[1];
                        }
                    }

                    // Create a blob and download the file
                    var blob = new Blob([response], { type: 'application/zip' });
                    var link = document.createElement('a');
                    link.href = URL.createObjectURL(blob);
                    link.download = fileName;
                    link.click();

                    console.log("File downloaded successfully: " + fileName);
                } catch (error) {
                    console.error("Error processing response:", error);
                    alert("An error occurred while processing the file download.");
                }
            },
            error: function (xhr, status, error) {
                console.error("Error during file upload:", error);
                alert("File upload failed. Please try again.");
            }
        });
    });
});



